{
  "manifest_version": 3,
  "name": "Twitch Video Preview",
  "version": "1.0.1",
  "description": "Shows video preview when hovering over Twitch channels without ads",
  "browser_specific_settings": {
    "gecko": {
      "id": "twitch-video-preview@zen-browser",
      "strict_min_version": "109.0"
    }
  },
  "permissions": ["storage"],
  "host_permissions": [
    "*://*.twitch.tv/*",
    "*://*.twitchcdn.net/*",
    "*://*.jtvnw.net/*",
    "*://player.twitch.tv/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.twitch.tv/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "favicon.png",
    "48": "favicon.png",
    "128": "favicon.png"
  }
}
